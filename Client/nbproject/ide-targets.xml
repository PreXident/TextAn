<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Autopolan-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#debugj2se) -->
    <target depends="dist" name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="AutoPolAn" transport="dt_socket">
            <classpath path="${dir.lib}"/>
        </nbjpdastart>
        <java fork="true" jar="${dir.dist}/${file.dist}" dir="${dir.dist}">
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
