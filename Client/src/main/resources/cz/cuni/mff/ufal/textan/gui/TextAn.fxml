<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.input.*?>
<?import java.net.URL ?>
<?import javafx.scene.web.WebView?>
<?import javafx.collections.FXCollections?>

<BorderPane fx:id="root" prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml"
			fx:controller="cz.cuni.mff.ufal.textan.gui.TextAnController" styleClass="root" >
	<stylesheets >
		<URL value="@TextAn.css" />
		<URL value="@window.css" />
	</stylesheets>
	<top>
		<VBox>
			<MenuBar fx:id="menuBar" >
				<menus>
					<Menu text="File" >
						<MenuItem text="Close" onAction="#close">
							<accelerator>
								<KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="X"/>
							</accelerator>
						</MenuItem>
					</Menu>
					<Menu text="Wizards" >
						<MenuItem text="Report" onAction="#reportWizard" />
						<MenuItem text="Graph" onAction="#graph" />
					</Menu>
					<Menu text="Nastavení" >
						<CheckMenuItem fx:id="menuItemIndependentWindows" text="Samostatná okna" onAction="#independentWindows" />
						<CheckMenuItem fx:id="menuItemHypergraphs" text="Hypergrafy" onAction="#hypergraphs" />
						<CustomMenuItem hideOnClick="false" text="Lokalizace">
							<content>
								<HBox alignment="CENTER_LEFT" >
									<Label text="Localizace" styleClass="menu-item-label"/>
									<ComboBox fx:id="localizationCombo" editable="true">
										<items>
											<FXCollections fx:factory="observableArrayList">
												<String fx:value="cs" />
												<String fx:value="en" />
											</FXCollections>
										</items>
										<value>
											<String fx:value="cs" />
										</value>
									</ComboBox>
								</HBox>
							</content>
						</CustomMenuItem>
						<CustomMenuItem hideOnClick="false" text="Login">
							<content>
								<HBox alignment="CENTER_LEFT" spacing="10"  >
									<Label text="Login:" styleClass="menu-item-label"/>
									<TextField fx:id="loginTextField"/>
								</HBox>
							</content>
						</CustomMenuItem>
					</Menu>
				</menus>
			</MenuBar>
		</VBox>
	</top>
	<center>
		<Pane fx:id="content"/>
	</center>
</BorderPane>
